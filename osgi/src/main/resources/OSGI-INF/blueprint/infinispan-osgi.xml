<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:shell="http://karaf.apache.org/xmlns/shell/v1.0.0">

    <bean id="infinispanServiceFactory" class="org.infinispan.osgi.InfinispanServiceFactory" destroy-method="destroy">
        <property name="bundleContext" ref="blueprintBundleContext"/>
    </bean>

    <service ref="infinispanServiceFactory" interface="org.osgi.service.cm.ManagedServiceFactory">
        <service-properties>
            <entry key="service.pid" value="org.jboss.infinispan.server"/>
        </service-properties>
    </service>

</blueprint>